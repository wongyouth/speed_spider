#!/usr/bin/env ruby

$: << File.expand_path('../../lib', __FILE__)

require 'speed_spider'

# parse arguments
cli = Cli.new.parse!

start_url = ARGV[0]
(puts 'Usage: speed_spider [options] start_url'; exit 1) if start_url.nil?

crawler = Crawler.new start_url, cli.base_url, cli.options
crawler.crawl
